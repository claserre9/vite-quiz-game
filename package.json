{
    "name": "knockout-page-vite",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint --config .eslintrc.cjs . --ext .ts",
        "format": "prettier --write .",
        "prepare": "husky install",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test"
    },
    "devDependencies": {
        "@types/knockout": "^3.4.77",
        "@types/node": "^24.1.0",
        "@types/page": "^1.11.9",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "typescript": "~5.8.3",
        "vite": "^7.0.4",
        "vitest": "^1.6.0",
        "@vitest/coverage-v8": "^1.6.0",
        "jsdom": "^24.0.0",
        "@playwright/test": "^1.47.1"
    },
    "dependencies": {
        "knockout": "^3.5.1",
        "page": "^1.11.6"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix"
        ],
        "*.{ts,js,css,md,json}": [
            "prettier --write"
        ]
    }
}
